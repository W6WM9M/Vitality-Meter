<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.makingandtinkering">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/vitality_meter_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MakingAndTinkering">
        <activity
            android:name=".DeleteHistoryActivity"
            android:theme="@style/Theme.Transparent3"/>
        <activity android:name=".HistoryActivity" />
        <activity
            android:name=".GlucoseReadingDetailsActivity"
            android:theme="@style/Theme.Transparent" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SwitchCodeNotificationActivity"
            android:theme="@style/Theme.Transparent2" />
        <activity
            android:name=".ConfirmBackActivity"
            android:theme="@style/Theme.Transparent3" />
        <activity
            android:name=".ConnectDeviceActivity"
            android:theme="@style/Theme.Transparent2" />
        <activity android:name=".LightBulbActivity" />
        <activity
            android:name=".BluetoothDeviceListActivity"
            android:theme="@style/Theme.Transparent" />
        <activity android:name=".HeartRateSensorActivity" />
        <activity android:name=".OximeterActivity" />
        <activity android:name=".GlucometerActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>