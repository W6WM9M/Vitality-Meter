<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SwitchCodeNotificationActivity">

    <ImageView
        android:id="@+id/sorryImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/sorry"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/apologyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="Due to memory constraint, we are unable to incorporate all functions into a single Arduino file. Please upload the oximeter Arduino code before the oximeter functionality can be used.  "
        android:textColor="#898686"
        app:layout_constraintBottom_toTopOf="@+id/okayButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/okayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:fontFamily="@font/audiowide"
        android:text="Okay"
        android:textAllCaps="false"
        app:backgroundTint="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apologyMessage"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:text="Icon made by Freepik from www.flaticon.com"
        android:textColor="#79AFAEAE"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/sorryImage"
        app:layout_constraintStart_toStartOf="@+id/sorryImage"
        app:layout_constraintTop_toBottomOf="@+id/sorryImage" />
</androidx.constraintlayout.widget.ConstraintLayout>